@code {

    /// <summary>
    /// Object For Email Form
    /// </summary>
    public class ContactFormObject
    {
        public string Name { get; set; }
        public string Title { get; set; }
        public string Message { get; set; }

        public string EmailReciever { get; set; }
        public string YourEmial { get; set; }


        public ContactFormObject(){

            YourEmial = "yourEmail@gmail.com";
        }
    }

    //Variables for component
    [Parameter]
    public string name { get; set; }
    [Parameter]
    public string email_reciever { get; set; }
    [Parameter]
    public string title { get; set; }
    [Parameter]
    public string message { get; set; }


    //Will display error
    protected string error_name;
    protected string error_title;
    protected string error_message;
    protected string error_email;

    //Bool to check if there is any mistakes with contact form
    protected bool isValid = true;

    protected ContactFormObject Object = new ContactFormObject();

    /// <summary>
    /// Function for sending email (When inplementing change for one bellow) This one is just for object demonstration
    /// </summary>
    public async void SendEmail()
    {
        error_name = "";
        error_message = "";
        error_title = "";
        isValid = true;

        Object.Name = "";

        if(name == null || name == "")
        {
            error_name = "Please enter your name";
            isValid = false;
        }
        if(title == null || title == "")
        {
            error_title = "Please enter title of your message";
            isValid = false;
        }
        if(message == null || message == "")
        {
            error_message = "Please enter message";
            isValid = false;
        }

        if (email_reciever == null || email_reciever == "")
        {
            error_email = "Please enter valid email address of the reciever";
        }
        else
        {
            string email = email_reciever;
            Regex regex = new Regex(@"^([\w\.\-]+)@([\w\-]+)((\.(\w){2,3})+)$");
            Match match = regex.Match(email);

            if (match.Success) { }
            else if(!match.Success)
            {
                error_email = "Please input valid Email address";
                isValid = false;
            }
        }

        if(isValid == true)
        {
            Object.Name = name;
            Object.EmailReciever = email_reciever;
            Object.Message = message;
            Object.Title = title;
            error_email = "";
        }
    }

    protected void SendMail()
    {
        // Gmail Address from where you send the mail
        var fromAddress = "Gmail@gmail.com";
        // any address where the email will be sending
        var toAddress = Object.EmailReciever.ToString();
        // Passing the values and make a email formate to display
        string subject = Object.Title.ToString();
        string body = "From: " + Object.Name + "\n";
        body += "Email: " + Object.YourEmial + "\n";
        body += "Subject: " + Object.Message + "\n";
        // smtp settings
        var smtp = new System.Net.Mail.SmtpClient();
        {
            smtp.Host = "smtp.gmail.com";
            smtp.Port = 587;
            smtp.EnableSsl = true;
            smtp.DeliveryMethod = System.Net.Mail.SmtpDeliveryMethod.Network;
            smtp.Timeout = 20000;
        }
        // Passing values to smtp object
        smtp.Send(fromAddress, toAddress, subject, body);
    }

}
